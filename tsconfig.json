{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": false,
    "declaration": false,
    "sourceMap": true,
    "outDir": "../dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "noEmitOnError": true,
    "paths": {
      "@modules/*": ["./src/modules"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
